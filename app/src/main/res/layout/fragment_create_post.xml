<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.CreatePostFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="64dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_departureFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_destination_foreground"
                    android:translationY="10dp" />


                <Spinner
                    android:id="@+id/spinnerDeparturePlace"
                    android:layout_width="230dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="0dp"
                    android:entries="@array/travelPlaceGroup" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_travellingTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_destination_foreground"
                    android:translationY="10dp" />


                <Spinner
                    android:id="@+id/spinnerTravelPlace"
                    android:layout_width="230dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="0dp"
                    android:entries="@array/departurePlaceGroup" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_date_foreground"
                    android:translationY="10dp" />


                <EditText
                    android:id="@+id/edit_text_travellingDate"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/travelDate"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:translationX="8dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time_foreground"
                    android:translationY="10dp" />


                <EditText
                    android:id="@+id/edit_text_travellingTime"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:focusable="false"
                    android:hint="@string/travelTime"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:translationX="8dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_carPlateNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car_foreground"
                    android:translationY="10dp" />


                <EditText
                    android:id="@+id/edit_text_carPlateNum"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:hint="@string/carPlateNum"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:translationX="8dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_carModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car_foreground"
                    android:translationY="10dp" />


                <EditText
                    android:id="@+id/edit_text_carModel"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:hint="@string/carModel"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:translationX="8dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_carColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_car_foreground"
                    android:translationY="10dp" />


                <EditText
                    android:id="@+id/edit_text_carColor"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:hint="@string/carColor"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:translationX="8dp"

                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationX="25dp"
                android:translationY="10dp">

                <ImageView
                    android:id="@+id/icon_passengerNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_passenger_24"
                    android:translationY="10dp" />


                <EditText
                    android:id="@+id/edit_text_passengerNum"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:hint="@string/passengerNum"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:translationX="8dp"
                    android:digits="12345"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:translationY="10dp">

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:fontFamily="@font/cooper"
                    android:text="@string/cancelButton"
                    android:textColor="@color/white"

                    android:translationX="0dp"
                    android:translationY="0dp" />

                <Button
                    android:id="@+id/buttonPost"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:fontFamily="@font/cooper"
                    android:text="@string/postButton"
                    android:textColor="@color/white"
                    android:translationX="10dp"
                    android:translationY="0dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>