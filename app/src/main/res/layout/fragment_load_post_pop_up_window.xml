<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_window_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.rides.LoadPostPopUpWindowFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/icon_departureFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_destination_foreground"
                android:translationY="10dp" />

            <Spinner
                android:id="@+id/spinnerSearchDepartureInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/travelPlaceGroup"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="20sp"
                android:translationX="8dp" />

        </LinearLayout>

        <View
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:translationY="10dp">

            <ImageView
                android:id="@+id/icon_travellingTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_destination_foreground"
                android:translationY="10dp" />


            <Spinner
                android:id="@+id/spinnerSearchDestinationInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/departurePlaceGroup"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="20sp"
                android:translationX="8dp" />

        </LinearLayout>

        <View
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:translationY="10dp">

            <ImageView
                android:id="@+id/icon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_foreground"
                android:translationY="10dp" />


            <EditText
                android:id="@+id/editTextDateInner"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/search_post_date"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="7dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:translationX="8dp" />

        </LinearLayout>

        <View
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/buttonSearchPost"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:textSize="18sp"
            android:text="@string/search_post_button" />


    </LinearLayout>

</LinearLayout>