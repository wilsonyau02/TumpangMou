<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#E3E3E3"
    app:cardCornerRadius="20dp">


        <ImageView
            android:id="@+id/dateIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/calendar_black" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="230dp"
            android:paddingTop="10dp"
            android:text="2023-05-14"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/time_black" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="30dp"
            android:paddingTop="10dp"
            android:text="08:00"
            android:textColor="@color/black" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:translationY="40dp" />

        <ImageView
            android:id="@+id/carIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/car_black" />

        <TextView
            android:id="@+id/textViewDeparturePlace"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="190dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text="PV15 Bus Station"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/arrow_black" />

        <TextView
            android:id="@+id/textViewTravellingPlace"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text="TARUMT Main Gate"
            android:textColor="@color/black" />


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:translationY="80dp" />

        <ImageView
            android:id="@+id/pointsIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/baseline_card_giftcard_24" />

        <TextView
            android:id="@+id/textViewDriverPoints"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="200dp"
            android:paddingTop="10dp"
            android:text="500"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/passengerIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/passenger_black" />

        <TextView
            android:id="@+id/textViewPassNum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="30dp"
            android:paddingTop="10dp"
            android:text="3"
            android:textColor="@color/black" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:translationY="120dp" />


</androidx.cardview.widget.CardView>